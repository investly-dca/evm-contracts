pragma solidity ^0.8.20;

import "forge-std/Test.sol";

import "../src/IERC20.sol";
import "../src/InvestlyLogic.sol";
import "../src/InvestlyState.sol";

contract ForkTest is Test {
    address constant ZERO_X_EXCHANGE_PROXY_ADDRESS = 0xDef1C0ded9bec7F1a1670819833240f027b25EfF;
    address constant ORALLY_EXECUTORS_REGISTRY = 0xa5d1D2f23DaD7fDbB57BE3f0961a3D4ffdd4039A;
    address constant ORALLY_MULTICALL = 0xb65dc3dDA0A47B7bE4c43fE8eE124986D12aCDA3;

    address constant USDT_ADDRESS = 0xFd086bC7CD5C481DCC9C85ebE478A1C0b69FCbb9;
    address constant UNI_ADDRESS = 0xFa7F8980b0f1E64A2062791cc3b0871572f1F7f0;
    address constant USER = 0x2D60362EA2Ef3c4ffe80d237527Cf2a037A31919;

    uint256 arbitrumFork;
    InvestlyState investlyState;
    InvestlyLogic investlyLogic;
    IERC20 usdt;

    function setUp() public {
        arbitrumFork = vm.createFork("https://arbitrum-mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID");
        vm.selectFork(arbitrumFork);

        investlyState = new InvestlyState();
        investlyLogic = new InvestlyLogic(ORALLY_EXECUTORS_REGISTRY, address(investlyState), ZERO_X_EXCHANGE_PROXY_ADDRESS);

        investlyState.setLogicContract(address(investlyLogic));
        usdt = IERC20(USDT_ADDRESS);

        vm.startPrank(USER);
        usdt.approve(address(investlyLogic), 10000000);
        vm.stopPrank();
    }

    function testAddSubscriptionWithDeposit() public {
        vm.selectFork(arbitrumFork);

        vm.startPrank(USER);

        investlyLogic.addSubscriptionWithDeposit(
            USDT_ADDRESS,
            UNI_ADDRESS,
            1000000,
            ZERO_X_EXCHANGE_PROXY_ADDRESS,
            ZERO_X_EXCHANGE_PROXY_ADDRESS,
            "",
            0,
            10000000
        );
        uint32 subId = 1;

        // check deposited user balance
        (address token, uint256 amount) = investlyState.tokenBalances(USER, subId);
        assertEq(amount, 10000000);
        assertEq(token, USDT_ADDRESS);

        // usdt balance should be increased
        assertEq(usdt.balanceOf(address(investlyState)), 10000000);

        // should subscription be added
        (address user, address sellToken, address buyToken, uint256 sellAmount, address spender, address swapTarget, bytes memory swapCallData, uint256 value) = investlyState.subscriptions(subId);
        assertEq(sellToken, USDT_ADDRESS);
        assertEq(user, USER);

        // test withdraw
        investlyLogic.withdrawToken(USDT_ADDRESS, 1000000, subId);
        (token, amount) = investlyState.tokenBalances(USER, subId);
        assertEq(amount, 9000000);
        assertEq(token, USDT_ADDRESS);
        assertEq(usdt.balanceOf(address(investlyState)), 9000000);

        vm.stopPrank();
    }

    function testExecuteSwap() public {
        vm.selectFork(arbitrumFork);

        vm.startPrank(USER);

        investlyLogic.addSubscriptionWithDeposit(
            USDT_ADDRESS,
            UNI_ADDRESS,
            1000000,
            ZERO_X_EXCHANGE_PROXY_ADDRESS,
            ZERO_X_EXCHANGE_PROXY_ADDRESS,
            "",
            0,
            10000000
        );

        uint32 subId = 1;

        vm.stopPrank();
        vm.startPrank(ORALLY_MULTICALL);

        investlyLogic.executeSwap("0x...", subId, 0, 0);

        vm.stopPrank();


        (address token, uint256 amount) = investlyState.tokenBalances(USER, subId);
        assertEq(amount, 9000000);
        assertEq(token, USDT_ADDRESS);
        assertEq(usdt.balanceOf(address(investlyState)), 9000000);

        (address tokenBought, uint256 amountBought) = investlyState.boughtTokens(USER, subId);
        assertEq(amountBought, 1000000);
        assertEq(tokenBought, UNI_ADDRESS);

        vm.stopPrank();
    }
}
